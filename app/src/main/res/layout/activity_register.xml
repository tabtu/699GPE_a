<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@mipmap/registerbackground"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgpe"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/account_management"/>
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:id="@+id/regis_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:background="@color/transparent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/grey"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgpe"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="15dp"
        android:padding="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/key"/>
        <View
            android:layout_width="2dip"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal" />
        <EditText
            android:id="@+id/regis_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="11"
            android:background="@color/transparent"
            android:layout_marginLeft="5dp"
            android:inputType="textPassword" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/lightgpe"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="15dp"
            android:padding="10dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/picture"/>
            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_horizontal" />
            <EditText
                android:id="@+id/regis_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="11"
                android:background="@color/transparent"
                android:layout_marginLeft="5dp"
                android:textColor="@color/grey"
                android:inputType="textPhonetic" />
        </LinearLayout>

        <Button
            android:id="@+id/regis_again"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="30dp"
            android:background="@color/gpe"
            android:textColor="@color/white"
            android:text="Again"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/regis_submit"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:background="@color/gpe"
            android:textColor="@color/white"
            android:text="Submit"/>
    </LinearLayout>

</LinearLayout>